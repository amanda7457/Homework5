@using Barron_Amanda_HW5.Controllers

@{
    ViewBag.Title = "Detailed Search";
}

<h2>Detailed Search</h2>
<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">

    <div class="form-group">
        <label>Search Repo Name:</label>
        <input name="SearchString" class="form-control" />
    </div>

    <div class="form-group">
        <label>Search Description:</label>
        <input name="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select a Language:</label>
        @Html.DropDownList("SelectedLanguage", (SelectList)ViewBag.AllLanguages, new { @class = "form-control" })
    </div>

    <div class="form-group">
        NumberofStars: @Html.TextBox("NumberofStars", null, new { @class = "form-control" }) <div class="text-danger">@ViewBag.Message</div>
    </div>

    <div class="form-group">
        <label class="radio">@Html.RadioButton("SelectedStars", StarDetailedSearch.GreaterThan)Greater Than</label>
        <label class="radio">@Html.RadioButton("SelectedStars", StarDetailedSearch.LessThan)Less Than</label>
    </div>

    <div class="form-group">
        <label>Modified After:</label>
        <input type="date" name="datSelectedDate" class="form-control" />
    </div>


    <button type="submit" class="btn btn-danger">Search</button>
</form>

